# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,rb}]
charset = utf-8

[*.js]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
